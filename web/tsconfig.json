{
    "compilerOptions" : {
        "strict": true,
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node16",
        "exactOptionalPropertyTypes": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "../public/static/js",
        "rootDir": "./src",
        "typeRoots": [
            "./src/types"
    ]
    },
   "include" : [
    "src/**/*.ts"
   ],
}